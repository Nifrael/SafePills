---
import Layout from "@layouts/Layout.astro";
import { SearchDrug } from "../components/features/SearchDrug";
import { SelectedDrugsList } from "../components/features/SelectedDrugsList";
import { addDrug } from "../lib/stores/medicationStore";
import type { Drug } from "../components/features/SearchDrug";

const handleAddDrug = (drug: Drug) => {
  addDrug(drug);
};
---

<Layout>
  <div class="page-header">
    <h1>SafePills</h1>
    <p class="subtitle">Analyse instantanée des interactions médicamenteuses</p>
  </div>

  <main class="checker-container">
    <div class="glass-card">
      <section class="search-section">
        <h2>1. Recherchez vos médicaments</h2>
        <p class="instruction">
          Tapez le nom d'une marque (ex: Doliprane) ou d'une molécule (ex:
          Ibuprofène).
        </p>
        <SearchDrug client:load />
      </section>

      <section class="list-section">
        <h2>2. Votre ordonnance virtuelle</h2>
        <SelectedDrugsList client:load />
      </section>

      <section class="interaction-status">
        <div class="status-placeholder">
          <p>
            Ajoutez au moins deux médicaments pour vérifier les interactions.
          </p>
        </div>
      </section>
    </div>
  </main>
</Layout>

<style lang="scss" is:global>
  @use "../styles/config/variables" as vars;
  @use "../styles/config/mixins" as mixins;

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
    padding-top: 2rem;

    h1 {
      font-size: 3.5rem;
      font-weight: 800;
      background: linear-gradient(135deg, #2ecc71, #27ae60);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin-bottom: 0.5rem;
    }

    .subtitle {
      font-size: 1.2rem;
      color: #636e72;
    }
  }

  .checker-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1rem 5rem;
  }

  .glass-card {
    background: rgba(255, 255, 255, 0.8);
    backdrop-filter: blur(10px);
    border-radius: 24px;
    padding: 2.5rem;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  section {
    margin-bottom: 3rem;

    &:last-child {
      margin-bottom: 0;
    }

    h2 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
      color: #2d3436;
      display: flex;
      align-items: center;
      gap: 0.5rem;
    }

    .instruction {
      font-size: 0.9rem;
      color: #b2bec3;
      margin-bottom: 1.5rem;
    }
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
