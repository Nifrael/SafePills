---
import { Image } from "astro:assets";
import HeroImage from "../../assets/images/SafePills.png";
import ShieldIcon from "../icons/ShieldIcon.astro";
---

<section class="hero-container">
  <div class="hero-content">
    <div class="hero-left">
      <div class="page-header">
        <h1>SafePills</h1>
        <p class="subtitle">Votre assistant d'automédication.</p>
      </div>

      <div class="trust-badge">
        <span class="icon"><ShieldIcon size={16} /></span>
        <span class="text">FIABILITÉ MÉDICALE</span>
      </div>

      <p class="description">
        L'automédication peut être dangeureuse. Vérifiez si le médicament vous
        est adapté, avec SafePills.
      </p>

      <div class="hero-actions">
        <a href="/automedication" class="btn btn-primary">
          Démarrer l'analyse
        </a>
        <a href="#en-savoir-plus" class="btn btn-secondary"> En savoir plus </a>
      </div>
    </div>

    <div class="hero-right">
      <div class="image-placeholder">
        <Image src={HeroImage} alt="Hero Image" />
      </div>
    </div>
  </div>
</section>

<style lang="scss">
  @use "../../styles/config/variables" as *;
  @use "../../styles/config/mixins" as *;

  .hero-container {
    width: 100%;
    min-height: 85vh;
    padding: 2.5rem 1rem;
    display: flex;
    justify-content: center;
    background-color: white;
    margin: 0 auto;

    @include breakpoint-up($breakpoint-tablet) {
      padding: 3rem 2.5rem;
    }

    @include breakpoint-up($breakpoint-desktop) {
      width: 90%;
      min-height: 90vh;
    }
  }

  .hero-content {
    width: 100%;
    display: flex;
    flex-direction: column;
    gap: 3rem;

    @include breakpoint-up($breakpoint-desktop) {
      flex-direction: row;
      gap: 4rem;
    }
  }

  .hero-left {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1.5rem;
    @include breakpoint-up($breakpoint-desktop) {
      justify-content: center;
    }
  }

  .page-header h1 {
    font-size: 3rem;
    line-height: 1.1;
    font-weight: 900;
    margin-top: 0;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #3cb56f, #60fca1);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;

    @include breakpoint-up($breakpoint-tablet) {
      font-size: 3.5rem;
    }

    @include breakpoint-up($breakpoint-desktop) {
      font-size: 4.5rem;
    }
  }

  .page-header .subtitle {
    color: var(--paragraph-color);
    font-size: 1.25rem;
    font-weight: 600;
  }

  .trust-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #e8f7ee;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    width: fit-content;
  }

  .trust-badge .icon {
    font-size: 0.9rem;
  }

  .trust-badge .text {
    color: var(--tertiary-color);
    font-weight: 800;
    font-size: 0.75rem;
    letter-spacing: 0.05em;
  }

  .description {
    font-size: 1.25rem;
    line-height: 1.6;
    color: #636e72;
    max-width: 100%;
    margin: 0;

    @include breakpoint-up($breakpoint-tablet) {
      max-width: 540px;
    }
  }

  .hero-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    width: 100%;
    margin-top: 1rem;

    @include breakpoint-up($breakpoint-tablet) {
      flex-direction: row;
      width: auto;
    }
  }

  .hero-actions .btn {
    width: 100%;
    justify-content: center;

    @include breakpoint-up($breakpoint-tablet) {
      width: auto;
    }
  }

  .hero-right {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    border-radius: 24px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);

    @include breakpoint-up($breakpoint-desktop) {
      height: 80%;
    }
  }

  .image-placeholder img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 24px;
  }
</style>
