---
import PillIcon from "../icons/PillIcon.astro";

import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentPath = Astro.url.pathname;

const menuItems = [{ href: "/automedication", text: t("nav.test") }];

let frPath = currentPath;
let esPath = currentPath;

if (lang === "es") {
  frPath = currentPath.replace(/^\/es/, "") || "/";
} else {
  const path = currentPath === "/" ? "" : currentPath;
  esPath = "/es" + path;
}
const homePath = lang === "es" ? "/es" : "/";
---

<header>
  <nav aria-label="Navigation principale">
    <div class="nav-container">
      <a href={homePath} id="logo"
        ><span class="icon"><PillIcon size={20} /></span> SafePills</a
      >
      <ul class="desktop-menu">
        <li class="lang-switch">
          <a href={frPath} class={lang === "fr" ? "active-lang" : ""}>FR</a>
          <span class="separator">|</span>
          <a href={esPath} class={lang === "es" ? "active-lang" : ""}>ES</a>
        </li>
        {
          menuItems.map((item) => (
            <li>
              <a
                href={lang === "es" ? `/es${item.href}` : item.href}
                class={
                  item.text === t("nav.test") ? "btn btn-primary nav-btn" : ""
                }
              >
                {item.text}
              </a>
            </li>
          ))
        }
      </ul>
      <div class="mobile-menu">
        <div class="lang-switch-mobile-header">
          <a href={frPath} class={lang === "fr" ? "active-lang" : ""}>FR</a>
          <span class="separator">|</span>
          <a href={esPath} class={lang === "es" ? "active-lang" : ""}>ES</a>
        </div>
        <button
          class="menu-button"
          aria-expanded="false"
          aria-controls="mobile-menu-list"
          aria-label="Ouvrir le menu de navigation"
        >
          <span></span>
          <span></span>
          <span></span>
        </button>
        <ul class="menu" id="mobile-menu-list">
          {
            menuItems.map((item) => (
              <li>
                <a
                  href={lang === "es" ? `/es${item.href}` : item.href}
                  class={item.text === t("nav.test") ? "btn btn-primary" : ""}
                >
                  {item.text}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </nav>
</header>

<style lang="scss">
  @use "@styles/config/variables" as *;
  @use "@styles/config/mixins" as *;
  @use "@styles/components/buttons" as *;

  header {
    position: relative;
    z-index: 100;
    width: 100%;
    padding: 0.5rem;
  }

  header::after {
    content: "";
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 0.5px;
    background-color: rgba(210, 210, 210, 0.405);
    box-shadow: 1px 1px 5px rgba(0, 0, 0, 0.1);
    z-index: 30;
  }

  .nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.5rem 0;
    width: 95%;
    height: 100%;
    margin: 0 auto;
    z-index: 5;
  }

  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  ul li {
    margin: 0;
    padding: 0;
  }

  a {
    font-size: var(--h4);
    font-family: var(--font-text);
    text-decoration: none;
    color: var(--primary-color);
    transition: color 0.4s ease;

    @include keyboard-focus(var(--primary-color));

    @include breakpoint-up($breakpoint-desktop) {
      &:hover {
        color: var(--tertiary-color);
      }
    }
  }

  .desktop-menu {
    display: none;
    align-items: center;
    gap: 3rem;
    white-space: nowrap;

    @include breakpoint-up($breakpoint-desktop) {
      display: flex;
    }
  }

  .lang-switch {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;

    a {
      font-size: 0.9rem;
      padding: 0;
      color: var(--primary-color);
      opacity: 0.6;
      transition: opacity 0.3s;

      &:hover {
        opacity: 1;
      }

      &.active-lang {
        opacity: 1;
        font-weight: bold;
        text-decoration: underline;
      }
    }

    .separator {
      color: var(--tertiary-color);
      opacity: 0.4;
    }
  }

  .lang-switch-mobile-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-right: 1.5rem;

    a {
      font-size: 0.9rem;
      color: var(--primary-color);
      text-decoration: none;
      opacity: 0.7;

      &.active-lang {
        font-weight: 700;
        opacity: 1;
        text-decoration: underline;
      }
    }

    .separator {
      color: var(--tertiary-color);
      opacity: 0.4;
    }
  }

  .desktop-menu .nav-btn {
    padding: 0.6rem 1.5rem;
    font-size: 1rem;
    font-family: var(--font-text);
  }

  .menu-button {
    height: 30px;
    width: 30px;
    position: relative;
    background-color: transparent;
    z-index: 20;
    border: none;
    cursor: pointer;
    transition: transform 0.2s ease;

    @include button-keyboard-focus(var(--primary-color));
  }

  .menu-button span {
    height: 3px;
    width: 100%;
    background-color: var(--primary-color);
    border-radius: 25px;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    transition: 0.2s ease;
  }

  .menu-button span:first-child {
    top: 25%;
  }

  .menu-button span:last-child {
    top: 75%;
  }

  .active span:first-child {
    top: 50%;
    transform: translate(-50%, -50%) rotate(45deg);
  }

  .active span:nth-child(2) {
    opacity: 0;
  }

  .active span:last-child {
    top: 50%;
    transform: translate(-50%, -50%) rotate(-45deg);
  }

  .menu {
    display: none;
    position: fixed;
    width: 100vw;
    height: 100vh;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    top: 0;
    left: 0;
    background-color: var(--secondary-color);
    padding: 10rem 0;
    z-index: -10;
    transition: 0.5s ease;
    opacity: 0;
    overflow: auto;
  }

  .menu li {
    margin: 0;
  }

  .menu a {
    font-size: var(--h4);
    padding: 1rem 2rem;
    display: block;
    text-align: center;
    transition: all 0.3s ease;

    @include keyboard-focus(var(--primary-color));

    &:hover,
    &:active {
      color: var(--tertiary-color);
      transform: translateY(-2px);
    }
  }

  .show {
    display: flex;
    opacity: 1;
    transition: 0.3s ease-in-out;
    z-index: 10;
    overflow-y: auto;
  }

  :global(body.no-scroll),
  :global(html.no-scroll) {
    overflow: hidden;
  }

  .mobile-menu {
    display: flex;
    align-items: center;

    @include breakpoint-up($breakpoint-desktop) {
      display: none;
    }
  }

  #logo {
    @include breakpoint-up($breakpoint-desktop) {
      font-size: var(--h2);
    }
  }
</style>

<script>
  import "/src/scripts/hamburgerMenu.js";
</script>
