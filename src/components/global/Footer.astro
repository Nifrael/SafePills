---
import PillIcon from "../icons/PillIcon.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-top">
      <div class="brand">
        <p id="logo">
          <span class="icon"><PillIcon size={20} /></span> SafePills<span
            class="beta-badge">Bêta</span
          >
        </p>
      </div>

      <p class="footer-disclaimer">{t("disclaimer.text")}</p>
    </div>

    <div class="footer-divider"></div>

    <div class="footer-bottom">
      <p>
        © {new Date().getFullYear()}. {t("footer.rights")}
      </p>
    </div>
  </div>
</footer>

<style lang="scss">
  @use "../../styles/config/variables" as *;
  @use "../../styles/config/mixins" as *;

  .site-footer {
    padding: 3rem 2rem;
    border-top: 1px solid #dfe6e9;
    width: 100%;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
  }

  .footer-top {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1.5rem;
    margin-bottom: 2rem;

    @include breakpoint-up($breakpoint-tablet) {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }

  .brand {
    font-family: var(--font-title);
    font-size: 1.5rem;
    font-weight: 700;
    color: #2d3436;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .brand p {
    margin: 0;
    font-size: inherit;
    color: inherit;
  }

  .footer-disclaimer {
    font-size: 0.85rem;
    color: #636e72;
    max-width: 500px;
    line-height: 1.5;
  }

  .footer-divider {
    height: 1px;
    background-color: #f1f2f6;
    width: 100%;
    margin-bottom: 2rem;
  }

  .footer-bottom {
    text-align: center;
    font-size: 0.85rem;
  }

  .footer-bottom p {
    margin: 0;
    color: var(--tertiary-color);
  }
</style>
